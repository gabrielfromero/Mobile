<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/template_item"
        android:background="#cccccc"
        android:layout_marginBottom="10dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ivImagem"
            android:src="@drawable/bg_home"
            android:layout_weight="1"
            android:scaleType="fitXY" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="007"
                android:id="@+id/tvCodigo"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shampoo pra Piolho"
                android:id="@+id/tvNome"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gerador de lero lero Gerador de lero lero GGerador de lero lero Gerador de lero lero G"
                android:id="@+id/tvDescricao"
                android:textSize="12sp"
                android:textColor="#f90f90" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>